<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"
        app:cardBackgroundColor="@color/colorPrimary">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="2dp"
            android:text="Report"
            android:textAlignment="center"
            android:textColor="@color/cardview_light_background"
            android:textSize="20dp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

    <Spinner
        android:id="@+id/lst_mekanik"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/hela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <EditText
            android:id="@+id/txt_no_polisi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/hela"
            android:layout_weight="1"
            android:hint="Nomor Polisi" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txt_catatan"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:hint="Catatan"
            android:inputType="textMultiLine" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txt_no_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nomor Customer" />
    </android.support.design.widget.TextInputLayout>

    <Spinner
        android:id="@+id/lst_tipe"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" />

    <Button
        android:id="@+id/btn_insert"
        style="@android:style/Widget.Material.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="INSERT" />

</LinearLayout>